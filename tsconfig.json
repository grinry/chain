{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "noImplicitAny": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
